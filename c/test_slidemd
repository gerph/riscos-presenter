/*******************************************************************
 * File:        test_slidemd
 * Purpose:     Test that the slide markdown parser generates the right things
 * Author:      Gerph
 * Date:        18 Sep 2020
 ******************************************************************/

#include <assert.h>
#include <stdio.h>
#include <string.h>

#ifdef FORTIFY
#include "fortify.h"
#endif

#include "slidedeck.h"
#include "slidedeck_debug.h"
#include "slidemd.h"
#include "file.h"


int main(int argc, char *argv[])
{
    char *in_filename = "file/md";
    const char *mddata;
    slidedeck_t *deck;

    if (argc > 1)
    {
        in_filename = argv[1];
    }

#ifdef FORTIFY
    Fortify_EnterScope();
#endif

    mddata = file_read_string(in_filename);
    if (mddata == NULL)
    {
        printf("Could not read %s", in_filename);
        return 1;
    }

    printf("---- MD parsing ----\n");
    deck = slidemd_parse(mddata, strlen(mddata));
    free((char*)mddata);

    printf("---- Slides dump ----\n");
    //slidedeck_dump(deck);

    slidedeck_destroy(deck);

#ifdef FORTIFY
    Fortify_LeaveScope();
#endif

    return 0;
}
